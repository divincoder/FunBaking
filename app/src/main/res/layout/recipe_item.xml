<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardView.Light"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="4dp"
    android:foreground="?android:selectableItemBackground"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/margins">

        <ImageView
            android:id="@+id/recipe_image_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="ContentDescription"
            tools:src="@drawable/cheese_cake" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingLeft="@dimen/text_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recipe_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/recipe_name_size"
                android:textStyle="italic"
                tools:text="Nutella Pie" />

            <TextView
                android:id="@+id/servings_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/servings_text_size"
                android:paddingTop="@dimen/servings_padding"
                tools:text="Servings 8" />

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>