<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/fragment_recipe_details"
        android:name="com.ofoegbuvgmail.funbaking.ui.fragments.RecipeDetailsFragment"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        tools:context=".ui.activities.RecipeDetailActivity"
        tools:layout="@layout/fragment_recipe_details" />

    <!-- divider for the screen-->

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/step_detail_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="@dimen/layout_margin">

        <FrameLayout
            android:id="@+id/step_detail_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_step_detail" />

    </LinearLayout>

</LinearLayout>